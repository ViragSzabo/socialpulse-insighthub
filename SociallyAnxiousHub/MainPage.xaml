<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SociallyAnxiousHub.Pages"
             x:Class="SociallyAnxiousHub.Pages.HomePage.MainPage"
             Title="Socially Anxious Hub">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="Welcome to the Hub!" FontSize="32" HorizontalOptions="Center" />

        <Button Text="Authenticate with Spotify"
                Command="{Binding AuthenticateCommand}"
                IsVisible="{Binding !IsAuthenticated}" />

        <Button Text="Go to Playlist"
                Command="{Binding GoToPlaylistCommand}"
                IsVisible="{Binding IsAuthenticated}" />

        <Button Text="Go to Memory Board"
                Command="{Binding GoToMemoryBoardCommand}"
                IsVisible="{Binding IsAuthenticated}" />
    </VerticalStackLayout>
</ContentPage>