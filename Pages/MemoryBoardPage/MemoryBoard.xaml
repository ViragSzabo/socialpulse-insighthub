<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SociallyAnxiousHub.Pages.MemoryBoardPage"
             xmlns:features="clr-namespace:SociallyAnxiousHub.Features"
             x:Class="SociallyAnxiousHub.Pages.MemoryBoardPage.MemoryBoard"
             Title="Memory Board">

    <ContentPage.BindingContext>
        <vm:MemoryBoardViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Spacing="5" Padding="10">
            <Label Text="{Binding BoardName}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding BoardDescription}" FontSize="16" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding MemoryItems}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="features:MemoryItem">
                    <Frame Margin="5" Padding="5" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" />
                            <Label Text="{Binding Date, StringFormat='{0:d}'}" FontSize="12" />
                            <Image Source="{Binding ImagePath}" Aspect="AspectFill" HeightRequest="150" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="+"
                FontSize="30"
                Command="{Binding AddMemoryCommand}"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Grid.Row="1"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30" />
    </Grid>
</ContentPage>